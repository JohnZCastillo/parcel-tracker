{% extends "index.twig" %}


{% block body %}


	<form id="registerForm" class="w-full max-w-md" method="POST" action="/register">


		<h1 class="text-5xl font-semibold mb-2" style="color: #88D176">

		Register
		</h1>

		<!-- Site Name -->
		<div>
			<label for="siteName" class="block text-sm font-medium text-gray-600">Site Name</label>
			<input type="text" id="siteName" name="name" class="input mt-1 p-2 w-full">
		</div>

		<!-- Email -->
		<div>
			<label for="email" class="block text-sm font-medium text-gray-600">Email</label>
			<input type="email" id="email" name="email" class="input mt-1 p-2 w-full">
		</div>

		<!-- Password -->
		<div>
			<label for="password" class="block text-sm font-medium text-gray-600">Password</label>
			<input type="password" id="password" name="password" class="input mt-1 p-2 w-full">
		</div>

		<!-- Submit Button -->
		<div class="mt-3">
			<button type="submit" class="w-full bg-blue-500 text-white p-2 rounded-md hover:bg-blue-600">Register</button>
		</div>

		<div class="mt-3">
			<p class='text-red-600'>{{error}}</p>
		</div>

	</form>

{% endblock %}
